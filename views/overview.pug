extends base

block content
  main.main
    .card-container
    
      each producer in producers
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/logo-white.png`, alt=`${producer.producerName}`)
            h3.heading-tertirary
              span= producer.producerName

          .card__details
            h4.card__sub-heading= `${producer.prodStyle} style loops`
            p.card__text= producer.description
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              a(class='button', href= producer.youtubeLink) Youtube Channel
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span= `${producer.minSamplesPerPack} minimum samples per week`

          .card__footer
            p
              span.card__footer-value= `$${producer.price}`
              | 
              span.card__footer-text per Month
            p.card__ratings
              | 
              - if(producer.ratingsQuantity > 0) 
                span.card__footer-value= producer.ratingsAverage
                span.card__footer-text= ` rating (${producer.ratingsQuantity})`
              - if(producer.ratingsQuantity === 0) 
                span.card__footer-text= `(${producer.ratingsQuantity} reviews)`
            a.btn.btn--green.btn--small(href=`/producer/${producer.slug}`) Details